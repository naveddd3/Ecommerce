@model IEnumerable< Domain.Entities.MasterCategory>

@if (Model != null && Model.Any())
{
    int i = 0;
    foreach (var item in Model)
    {
        i++;
        <tr>
            <td>@i</td>
            <td>@item.CategoryName</td>
            <td><img src="@item.CategoryImage" alt="CategoryImage_@i" width="80" height="70"></td>
            <td>@item.CategoryDescription</td>
            <td class="table-action">
                <a href="javascript:void(0);" class="action-icon" onclick="AddOrEdit(@item.CategoryId)"> <i class="mdi mdi-square-edit-outline"></i></a>
                
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="12" style="text-align:center" class="danger">Record Not Found!</td>
    </tr>
}

