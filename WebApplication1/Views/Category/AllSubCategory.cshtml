@model IEnumerable< Domain.Entities.SubCategory>

@if (Model != null && Model.Any())
{
    int i = 0;
    foreach (var item in Model)
    {
        i++;
        <tr>
            <td>@i</td>
            <td>@item.SubCategoryName</td>
            <td>@item.CategoryName</td>
            <td><img src="@item.SubCategoryImage" alt="CategoryImage_@i" width="80" height="70"></td>
            <td>@item.SubCategoryDescription</td>
            <td class="table-action">
                <a href="javascript:void(0);" class="action-icon" onclick="AddOrEditSubCategory(@item.SubCategoryId)"> <i class="mdi mdi-square-edit-outline"></i></a>

            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="12" style="text-align:center" class="danger">Record Not Found!</td>
    </tr>
}

