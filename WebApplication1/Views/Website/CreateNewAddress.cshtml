@using Domain.Entities@using Domain.Enum@model SavedAddress<style>    .address-btn {        display: flex;        align-items: center;        padding: 10px 15px;        / Add padding for a better button size / border: 1px solid transparent;        / Default border / border-radius: 5px;        / Rounded corners / transition: background-color 0.3s, border 0.3s;        / Smooth transition /    }        .address-btn:hover,        .address-btn:focus {                    / Light gray background on hover / border: 1px solid #007bff;            / Border color on hover / color: #007bff;            / Text color on hover /        }        .address-btn img {            margin-right: 5px;            / Space between icon and text /        }</style><!-- Address Modal Structure --><div class="modal fade custom-modal" id="addNewAddress" tabindex="-1" aria-labelledby="quickViewModalLabel" aria-hidden="true" data-bs-backdrop="static">    <br /><br />    <div class="modal-dialog modal-sm custom-modal-dialog">        <div class="modal-content">            <!-- Close Button -->            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>            <!-- Modal Body -->            <div class="modal-body">                <!-- Address Label and Tags -->                <div class="form-group mb-3">                    <label>Save address as *</label>                    <div class="d-flex gap-2" id="address-buttons">                        <a class="btn btn-light address-btn" onclick="setAddressType(1)" aria-label="Save as Home" tabindex="0">                            <img src="https://cdn.grofers.com/assets/ui/address/address_home_location.png" width="18" height="18" alt="Home Icon"> Home                        </a>                        <a class="btn btn-light address-btn" onclick="setAddressType(2)" aria-label="Save as Work" tabindex="0">                            <img src="https://cdn.grofers.com/assets/ui/address/address_work_location.png" width="18" height="18" alt="Work Icon"> Work                        </a>                        <a class="btn btn-light address-btn" onclick="setAddressType(3)" aria-label="Save as Hotel" tabindex="0">                            <img src="https://cdn.grofers.com/assets/ui/address/address_hotel_location.png" width="18" height="18" alt="Hotel Icon"> Hotel                        </a>                        <div class="d-flex gap-2 align-items-center" id="other-wrapper">                            <a class="btn btn-light address-btn" id="other-button" onclick="setAddressType(4)" aria-label="Save as Other" tabindex="0">                                <img src="https://cdn.grofers.com/assets/ui/address/address_other_location.png" width="18" height="18" alt="Other Icon"> Other                            </a>                            <div id="other-input" style="display: none;">                                <input type="text" asp-for="OtherType" placeholder="Save as" style="border: none;" aria-label="Specify other address type">                            </div>                        </div>                    </div>                </div>                <!-- Input Fields -->                <div class="container mt-5">                    <input type="hidden" asp-for="Id" />                    <div class="row">                        <div class="col-sm-6">                            <div class="form-group">                                <label for="address">Flat / House no / Building name *</label>                                <input type="text" class="form-control" asp-for="HouseNo" placeholder="Enter address" required>                            </div>                        </div>                        <div class="col-sm-6">                            <div class="form-group">                                <label for="floor">Floor (optional)</label>                                <input type="text" class="form-control" asp-for="Floor" placeholder="Enter floor">                            </div>                        </div>                    </div>                    <div class="row">                        <div class="col-sm-6">                            <div class="form-group">                                <label for="heuristics">Area / Sector / Locality *</label>                                <textarea class="form-control" rows="1" asp-for="Area" placeholder="Enter Area"></textarea>                            </div>                        </div>                        <div class="col-sm-6">                            <div class="form-group">                                <label for="landmark">Nearby landmark (optional)</label>                                <input type="text" class="form-control" asp-for="LandMark" placeholder="Enter landmark">                            </div>                        </div>                    </div>                    <div class="row">                        <div class="col-sm-6">                            <div class="form-group">                                <label for="name">Your name *</label>                                <input type="text" class="form-control" asp-for="Name" placeholder="Enter your name" required>                            </div>                        </div>                        <div class="col-sm-6">                            <div class="form-group">                                <label for="phone">Your phone number (optional)</label>                                <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="Enter phone number">                            </div>                        </div>                    </div>                </div>            </div>            <!-- Modal Footer -->            <div class="modal-footer">                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>                <button type="button" class="btn btn-primary" onclick="SaveOrEditAddress()">Save Address</button>            </div>        </div>    </div></div>