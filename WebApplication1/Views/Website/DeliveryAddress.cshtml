@using Domain.Entities
@model List<SavedAddress>;

<div class="card">
    <div class="card-body">
        <div class="card-body">
            <a class="mt-3 " id="addNewAddress"><i class="fi-rs-plus"></i> Add New Address</a>
        </div>
    </div>
</div>
<div>
    <p>Your saved address</p>

    @if (Model != null)
    {
        @foreach (var addrrss in Model)
        {
            <div class="address-list">
                <div class="address-item bg-light rounded shadow-sm p-3 mb-3">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <img title="HOME"
                                 src="@addrrss.TypeImg"
                                 alt="Home Icon"
                                 class="img-fluid rounded"
                                 style="max-width: 50px; max-height: 50px;" />
                        </div>
                        <div>
                            <div class="fw-bold text-dark">@addrrss.Type</div>
                            <div class="text-muted small">
                                @(addrrss.Floor + " " + addrrss.HouseNo + " " + addrrss.Area + " " + addrrss.AddressLine1 + " " + addrrss.City)
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
<script>
    $('#addNewAddress').on('click', function () {
        $.post('/Website/CreateNewAddress').done(function (result) {
            $("#productDetail").html(result);
            $('#addNewAddress').modal('show');
        }).fail(function (xhr) {
            alert("Error: " + xhr.status + " " + xhr.statusText);
        });
    });

    var SaveOrEditAddress = () => {
        var obj = {
            Id: $("#Id").val(),
            HouseNo: $("#HouseNo").val(),
            Type: $("#HOME").val(),
            Floor: $("#Floor").val(),
            Area: $("#Area").val(),
            LandMark: $("#LandMark").val(),
            Name: $("#Name").val(),
            PhoneNumber: $("#PhoneNumber").val()
        };

        $.ajax({
            url: "/Website/SaveOrUpdateAddress",
            type: "POST",
            data: obj,
            success: function (response) {

                QAlert(response.statusCode, response.responseText);
            },
            error: function (res) {
                QAlert(res.statusCode, res.responseText);
            }
        });
    };

</script>
