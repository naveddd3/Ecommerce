@using Domain.Entities
@model DeliveryPartner
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <a href="/Products" class="btn btn-success mb-2 me-1">
                    <i class="ri-arrow-left-line"></i>
                    Back To List
                </a>
                <ul class="nav nav-tabs nav-bordered mb-3">
                </ul>
                <div class="row">
                    <div class="col-3">
                        <input type="hidden" asp-for="ID" />
                        <label name="FirstName">First Name :</label>
                        <input class="form-control" type="text" placeholder="Enter Firs tName" asp-for="FirstName" required>
                    </div>
                    <div class="col-3">
                        <label name="LastName">Last Name :</label>
                        <input class="form-control" type="text" placeholder="Enter Firs tName" asp-for="LastName" required>
                    </div>
                    <div class="col-3">
                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Enter Email" required>
                    </div>
                    <div class="col-3">
                        <label asp-for="ProfilePicture">Profile Picture:</label>
                        <input asp-for="ProfilePicture" class="form-control" type="file">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-3">
                        <label asp-for="AadharNumber">Aadhar Number :</label>
                        <input class="form-control" type="number" placeholder="Enter Discount in Percentage" asp-for="AadharNumber" maxlength="3" max="100" required>
                    </div>
                    <div class="col-3">
                        <label asp-for="PhoneNumber">PhoneNumber:</label>
                        <input asp-for="PhoneNumber" class="form-control" type="number" placeholder="Enter PhoneNumber" required>
                    </div>
                    <div class="col-3">
                        <label asp-for="DrivingLicense">Driving License</label>
                        <input asp-for="DrivingLicense" type="text" class="form-control" placeholder="Enter DrivingLicense" />
                        
                    </div>
                    <div class="col-3">
                        <label asp-for="Address">Full Address</label>
                        <textarea asp-for="Address" class="form-control"></textarea>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-3">
                        <label asp-for="City">City:</label>
                        <input asp-for="City" class="form-control" type="text" placeholder="Enter City of Delivery Partner" required>
                    </div>
                    <div class="col-3">
                        <label asp-for="State">State:</label>
                        <input asp-for="State" class="form-control" type="text" placeholder="Enter State of Delivery Partner" required>
                    </div>
                    <div class="col-3">
                        <label asp-for="PostalCode">PostalCode:</label>
                        <input asp-for="PostalCode" class="form-control" type="number" placeholder="Enter PostalCode" required>
                    </div>
                    <div class="col-3">
                        <label asp-for="VehicleType">VehicleType:</label>
                        <input asp-for="VehicleType" class="form-control" type="text" placeholder="Enter VehicleType" required>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-4">
                        <label asp-for="VehicleNumber">VehicleNumber:</label>
                        <input asp-for="VehicleNumber" class="form-control" type="text" placeholder="Enter Vehicle Number" required>
                    </div>
                    <div class="col-4">
                        <label asp-for="JoiningDate">JoiningDate:</label>
                        <input asp-for="JoiningDate" class="form-control" type="date" placeholder="Enter Joining Date" required>
                    </div>
                    <div class="col-4">
                        <label asp-for="IsVerified">IsVerified:</label><br/>
                        <input asp-for="IsVerified" class="switch" type="checkbox" required>
                    </div>
                </div>
                <div style="display: flex;justify-content: end;">
                    <button onclick="SaveOrUpdateDeliveryPartner()" type="button" class="btn btn-success mb-2 me-1" style="margin-top: 2rem;">
                        Save Product
                    </button>
                </div>
                <div id="result" style="display: flex;"></div>
            </div>
        </div>
    </div>
</div>
